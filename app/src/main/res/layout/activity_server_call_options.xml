<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".server_calls.ServerCallOptions"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/btnNoLibrary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Without any library"/>
    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNoLibrary"
        android:id="@+id/btnLoopj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Using Loopj"/>
    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoopj"
        android:id="@+id/btnVolley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Using Volley"/>
    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVolley"
        android:id="@+id/btnOkhttp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Using Okhttp"/>
    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOkhttp"
        android:id="@+id/btnRetrofit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Using Retrofit"/>

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRetrofit"
        android:id="@+id/btnRetrofitViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Using Retrofit ViewModel"/>
</androidx.constraintlayout.widget.ConstraintLayout>
